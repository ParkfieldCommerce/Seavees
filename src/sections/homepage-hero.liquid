<!-- Homepage Hero -->
<section class="Hero margin-bottom-7x s-margin-bottom-2x">
  <div class="Hero__image">
    <img
      src="{{section.settings.hero_image | img_url:'master'}}"
      srcset="{{section.settings.hero_image_mobile | img_url:'master'}} 550w,
             {{section.settings.hero_image | img_url:'master'}} 1000w,
             {{section.settings.hero_image_wide | img_url:'master'}} 1800w"
      alt="{{section.settings.hero_image.alt}}"
    >
  </div>
  <div class="Hero__text-container">
    <div class="container">
      <div class="row collapse">
        <div class="column l12 m12 s12">
          <h2 class="Hero__main">{{section.settings.hero_maintext}}</h2>
          {% unless section.settings.hero_button_text_1 == blank %}
          <a class="Hero__button Btn Btn--tertiary Btn--big">{{section.settings.hero_button_text_1}}</a>
          {% endunless %}
          {% unless section.settings.hero_button_text_2 == blank %}
          <a class="Hero__button Btn Btn--tertiary Btn--big">{{section.settings.hero_button_text_2}}</a>
          {% endunless %}
        </div>
      </div>
    </div>
  </div>
</section>
<style>
  .Hero__main{
    color: {{section.settings.hero_maintext_color}};
  }
</style>
{% schema %}
{
  "name": "Hero",
  "class":"homepage-hero",
  "settings":[
    {
      "type":"header",
      "content":"General Settings"
    },
    {
      "id": "hero_image",
      "type": "image_picker",
      "label": "Desktop Image"
    },
    {
      "id": "hero_image_wide",
      "type": "image_picker",
      "label": "Wide Desktop Image(>1800px)"
    },
    {
      "id": "hero_image_mobile",
      "type": "image_picker",
      "label": "Mobile Image"
    },
    {
      "type":"header",
      "content":"Text Settings"
    },
    {
      "id": "hero_maintext",
      "type": "textarea",
      "label": "Main Text"
    },
    {
      "id":"hero_maintext_color",
      "type":"color",
      "label":"Color",
      "default":"#FFF"
    },
    {
      "type":"header",
      "content":"Button 1 Settings"
    },
    {
      "id":"hero_button_text_1",
      "type":"text",
      "label":"Button Text"
    },
    {
      "id": "hero_url_1",
      "type":"url",
      "label":"Button Url"
    },
    {
      "type":"header",
      "content":"Button 2 Settings"
    },
    {
      "id":"hero_button_text_2",
      "type":"text",
      "label":"Button Text"
    },
    {
      "id": "hero_url_2",
      "type":"url",
      "label":"Button Url"
    }
  ],
  "presets":[{
      "name": "Hero",
      "category": "Homepage"
    }
  ]
}
{% endschema %}