<section class="Careers__tab Careers__tab-2 js-careersTab" data-tab="2">
  <div class="container l">
    <div class="row flex margin-bottom-7x mobile-reverse">
      <div class="column l6 m6 s12">
        <img src="{{section.settings.image_1 | img_url:'master'}}" alt="{{section.settings.image_1.alt}}">
      </div>
      <div class="column l6 m6 s12 flex">
        <div class="Careers__tab__text-content">
          <h2 class="Careers__tab__heading">{{section.settings.heading}}</h2>
          <div class="Careers__tab__body">{{section.settings.body}}</div>
        </div>
        <img class="Careers__tab__image--small" src="{{section.settings.image_2 | img_url:'master'}}" alt="{{section.settings.image_2.alt}}">
      </div>
    </div>
    <div class="row flex">
      <div class="column l12 m12 s12 center">
        <h2 class="Careers__tab__sub-heading">{{section.settings.position_heading}}</h2>
      </div>
      {% for block in section.blocks %}
      <div class="column l4 m4 s12 margin-bottom-4x s-margin-bottom-2x center">
        <a class="Careers__tab__job-link" href="{{block.settings.job_url}}">
          <span class="Careers__tab__job-title">{{block.settings.title}}</span>
          <span class="Careers__tab__job-location">{{block.settings.job_location}}</span>
        </a>
      </div>
      {% endfor %}

    </div>
  </div>
</section>
{% schema %}
{
  "name": "Careers - Section 2",
  "settings":[
    {
      "type":"text",
      "id":"heading",
      "label":"Section Heading"
    },
    {
      "type":"richtext",
      "id":"body",
      "label":"Section Body"
    },
    {
      "id": "image_1",
      "type": "image_picker",
      "label": "Image 1"
    },
    {
      "id": "image_2",
      "type": "image_picker",
      "label": "Image 2"
    },
    {
      "type":"text",
      "id":"position_heading",
      "label":"Position Heading"
    },
    {
      "type":"paragraph",
      "content":"Add Blocks to add open positions"
    }
  ],
  "blocks":[
  {
    "type":"position",
    "name":"Open Position",
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "Job Title"
      },
      {
        "id": "job_location",
        "type": "text",
        "label": "Job Location"
      },
      {
        "id": "job_url",
        "type":"url",
        "label":"Url"
      }
    ]
  }]
}
{% endschema %}