<!-- Homepage About -->
{% assign quote = section.settings %}
<section class="Quote margin-bottom-9x">
  <div class="container s">
    <div class="row">
      <div class="column l12 m12 s12 center">
        <blockquote>
          <picture>
            <source media="(max-width: 499px)" srcset="{{'Quotation Mobile.png' | asset_url}}">
            <source media="(min-width: 500px)" srcset="{{'Quotation Desktop.png' | asset_url}}">
            <img
              class="Quote__image"
              src="{{'Quotation Desktop.png' | asset_url}}"
              alt="Quotation Mark"
            >
          </picture>
          <p class="Quote__quote">{{quote.quote}}</p>
          <cite class="Quote__source"><span>{{quote.quote_person}},</span> {{quote.quote_title}}</cite>
        </blockquote>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Quote Section",
  "class":"homepage-quote",
  "settings":[
    {
      "type":"textarea",
      "id":"quote",
      "label":"Quote"
    },
    {
      "type":"text",
      "id":"quote_person",
      "label":"Person Name"
    },
    {
      "type":"text",
      "id":"quote_title",
      "label":"Person Title"
    }
  ],
  "presets":[{
      "name": "Quote Section",
      "category": "Homepage"
    }
  ]
}
{% endschema %}