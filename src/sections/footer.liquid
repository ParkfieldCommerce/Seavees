<!-- /snippets/{{ section.id }}.liquid -->

{% assign show_subscribe = section.settings.show_subscribe %}
{% assign show_social = section.settings.show_social %}
{% assign form_heading = section.settings.form_heading %}
{% assign form_email_placeholder = section.settings.form_email_placeholder %}
{% assign form_button_text = section.settings.form_button_text %}
{% assign form_success = section.settings.form_success %}

{% include 'socialbar' %}
<footer class="theme-footer" role="contentinfo">
  <div class="container center">
    <div class="row">
      <div class="column l5 m5 s12">
        {% if section.settings.footer_menu_1 %}
        {% assign footerMenu = linklists[section.settings.footer_menu_1] %}
        <nav>
          <h5>{{footerMenu.title}}</h5>
          <ul>
            {% for link in footerMenu.links %}
            <li>
              <a href="{{link.url}}">{{link.title}}</a>
            </li>
            {% endfor %}
          </ul>
        </nav>
        {% endif %}
        {% if section.settings.footer_menu_2 %}
        {% assign footerMenu = linklists[section.settings.footer_menu_2] %}
        <nav>
          <h5>{{footerMenu.title}}</h5>
          <ul>
            {% for link in footerMenu.links %}
            <li>
              <a href="{{link.url}}">{{link.title}}</a>
            </li>
            {% endfor %}
          </ul>
        </nav>
        {% endif %}
      </div>
      <div class="column l7 m7 s12">
        {% if show_subscribe %}
          {% include 'form-subscribe' %}
        {% endif %}
      </div>
    </div>
  </div>
</footer>
{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "header",
        "content": "Footer"
      },
      {
        "type": "checkbox",
        "id": "show_social",
        "label": "Show social media icons"
      },
      {
        "type":"link_list",
        "id":"footer_menu_1",
        "label":"Footer Menu 1"
      },
      {
        "type":"link_list",
        "id":"footer_menu_2",
        "label":"Footer Menu 2"
      },
      {
        "type": "header",
        "content": "Subscribe form"
      },
      {
        "type": "checkbox",
        "id": "show_subscribe",
        "label": "Show subscribe form"
      },
      {
        "type": "text",
        "id": "form_email_placeholder",
        "placeholder": "Email address",
        "label": "Email placeholder"
      },
      {
        "type": "text",
        "id": "form_button_text",
        "label": "Button",
        "placeholder": "Subscribe"
      },
      {
        "type": "textarea",
        "id": "form_success",
        "placeholder": "Thank you for subscribing!",
        "label": "Confirmation message"
      }
    ]
  }
{% endschema %}
