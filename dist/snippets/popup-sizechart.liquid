    <div class="SizeChartPopup popup overlay js-sizeChartPopup">
      <div class="popup-inner">
        <div class="popup-content">
          <div class="container m">
            <div class="row">
              <div class="column l6 m6 s12 Sizing__table Sizing__table--1 margin-bottom-4x">
                {% unless settings.size_page1 == blank %}
                  {% assign sizePageHandle = settings.size_page1 %}
                  {% assign sizePage = pages[sizePageHandle] %}
                  <h3 class="SizeChartPopup__title">{{sizePage.title}}</h3>
                  {{sizePage.content}}
                {% endunless %}
              </div>
              <div class="column l6 m6 s12 Sizing__table Sizing__table--2 margin-bottom-4x">
                {% unless settings.size_page2 == blank %}
                  {% assign sizePageHandle = settings.size_page2 %}
                  {% assign sizePage = pages[sizePageHandle] %}
                  <h3 class="SizeChartPopup__title">{{sizePage.title}}</h3>
                  {{sizePage.content}}
                {% endunless %}
              </div>
              <div class="column l12 m12 s12 Sizing__table Sizing__table--3 margin-bottom-4x">
                {% unless settings.size_page3 == blank %}
                  {% assign sizePageHandle = settings.size_page3 %}
                  {% assign sizePage = pages[sizePageHandle] %}
                  <h3 class="SizeChartPopup__title">{{sizePage.title}}</h3>
                  {{sizePage.content}}
                {% endunless %}
              </div>
            </div>
          </div>
          <button class="QVPopup__close js-sizeChartPopupHide" type="button"><i class="material-icons">close</i></button>
        </div>
      </div>
    </div>