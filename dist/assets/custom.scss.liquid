/* Nested Collection */
.NestedCollection__banner{
  position: relative;
  img{vertical-align: middle;}
}
.NestedCollection__heading{
  position: absolute;
  top: 50%;
  left: 50%;
  @include prefix(transform, translate(-50%,-50%));
  color: white;
  @include miller(2.4rem);
  @include minQuery($s){
    font-size: 4.8rem;
  }
}

.NestedCollection__collection__heading-container{
  position: relative;
  text-align: center;
}
.NestedCollection__collection__image{
  @include prefix(filter, grayscale(1));
  opacity: .1;
  width: 200px;
  max-width: 100%;
}
.NestedCollection__collection__title{
  color: $primary-accent2;
  display: inline-block;
  position: absolute;
  left: 0;
  bottom: 0;
  text-transform: uppercase;
  @include newsR(2.4rem);
  &:after{
    bottom: -10px;
  }
}
.NestedCollection__collection__body{
  margin-top: 30px;
  text-align: left;
  font-style: italic;
}

.NestedCollection__grid{
  display: grid;
  grid-row-gap: 20px;
  grid-column-gap: 10px;
  grid-template-columns: 1fr 1fr 1fr;
  @include maxQuery($s){
    grid-template-columns: 1fr 1fr;
  }
}
.NestedCollection__grid-cell{
  text-align: center;
}
.NestedCollection__grid-cell-info{
  @include maxQuery($s){
    grid-column: 1 / 3;
    grid-row: 1 / 1;
  }
}
.NestedCollection__grid-cell-image{
  grid-row: 2 / 4;
  @include maxQuery($s){
    grid-column: 1 / 3;
    grid-row: 4/ 4;
  }
  img{
    margin-top: 50px;
  }
}

.no-cssgrid{//For IE11 cause its lame
  .NestedCollection__grid{
    display: flex;
    flex-wrap: wrap;
  }
  .NestedCollection__grid-cell-image{
    display: none;
  }
  .NestedCollection__grid-cell,
  .NestedCollection__grid-cell-info{
    width: 33.333%;
  }
  @include maxQuery($s){
    .NestedCollection__grid-cell-info{
      width: 100%;
    }
    .NestedCollection__grid-cell{
      width: 50%;
    }
  }
}
.CollectionProduct{
  text-align: center;
  img{
    max-height: 173px;
  }
}
.CollectionProduct__info{
  text-transform: uppercase;
}
.CollectionProduct__title{
  font-size: 1.2rem;
  text-transform: uppercase;
  text-decoration: none;
  display: block;
  line-height: 1;
}
.CollectionProduct__price,
.CollectionProduct__color{
  font-size: 1.0rem;
}
.NestedCollection__filter-container{
  position: relative;
  height: 65px;
  @include flex-center();
}
.NestedFilter{
  @include inline-flex();
}
.NestedFilter__option{
  border: none;
  width: 90px;
  @include justify-content(flex-start);
  color: $gray;
  font-style: italic;
  &:hover{
    color: $primary-accent1;
    background-color: transparent;
  }
  &:after{
    font-family: 'Material Icons';
    font-style: normal;
    content:'\e5cf';
  }
}
.NestedFilter__option.active{
  color: $primary-accent1;
}
.NestedFilter__values-container{
  display: none;
  padding-top: 10px;
  padding-bottom: 10px;
  position: absolute;
  width: 100%;
  top: 65px;
  left: 0;
  right: 0;
  background-color: $gray-light;
  z-index: 2;
}
.NestedFilter__values{
  margin-left: auto;
  margin-right: auto;
  @include flex();
  flex-wrap: wrap;
}
.NestedFilter__value{
  border: none;
  color: #c5c5c5;
  font-size: 1.2rem;
  transition: color .3s, border-color .3s;
  margin-right: 25px;
  margin-top: 5px;
  margin-bottom: 5px;
  &:hover{
    background: transparent;
    color: $primary-accent1;
    border-color: $primary-accent1;
  }
}
.NestedFilter__value.active{
  color: $primary-accent1;
}

.NestedFilter__value--style{
  flex-wrap: wrap;
  color: $gray-dark;
  width: 70px;
  img{
    max-width: 100%;
    opacity: .5;
    @include prefix(filter, grayscale(1));
    transition: opacity .3s;
  }
  div{
    margin-top: 15px;
    width: 100%;
  }
}
.NestedFilter__value--style.active{
  img{
    opacity: 1;
  }
}

.NestedFilter__value--size{
  font-size: 1.2rem;
  font-weight: 700;
  height: 30px;
  width: 30px;
  border: 2px solid $gray;
  border-radius: 30px;
  color: $gray;
}
.NestedFilter__value--size.active{
  border-color: $primary-accent1;
  color: $primary-accent1;
}

.NestedFilter__value--height,
.NestedFilter__value--material{
  font-size: 1.8rem;
}
.NestedFilter__value--height.active,
.NestedFilter__value--material.active{
  text-decoration: underline;
}

.NestedFilter__value--color{
  width: 30px;
  height: 30px;
  border-radius: 30px;
  border: 2px solid transparent;
}
.NestedFilter__value--color.active{
  border: 2px solid $primary-accent1;
}
.NestedFilter__option-container.active{
  .NestedFilter__option{
    color: $primary-accent1;
    &:after{
      content:'\e5ce';
    }
  }
  .NestedFilter__values-container{
    @include flex-center();
  }
}
.ActiveFilters{
  @include inline-flex();
  @include justify-content(flex-end);
}
.ActiveFilters__value{
  border: none;
  position: relative;
  margin-left: 20px;
  &:after{
    font-family: "Material Icons";
    content:'\e5cd';
    position: absolute;
    right: -11px;
    top: -6px;
    font-size: 1.5rem;
  }
  &:hover{
    color: $primary-accent1;
    background: transparent;
  }
  @include maxQuery($s){
    margin-left: 0;
  }
}

@include maxQuery($s){
  .NestedCollection__filter-container{
    height: auto;
    .container.l{
      padding: 0;
    }
  }
  .NestedFilter{
    display: inline-flex;
    flex-wrap: wrap;
    width: 100%;
    margin-top: 11px;
    border-bottom: 1px solid $gray-light;
    margin-bottom: 11px;
  }
  .NestedFilter__option-container{
    width: 50%;
  }
  .NestedFilter__option{
    margin-left: auto;
    margin-right: auto;
    @include justify-content(center);
    margin-top: 11px;
    margin-bottom: 11px;
  }
  .NestedFilter__values-container{
    position: relative;
    top: initial;
    left: initial;
    right: initial;
    padding-left: 10px;
    padding-right: 10px;
  }
  .ActiveFilters__value{
    margin-left: auto;
    margin-right: auto;
    @include justify-content(center);
    margin-top: 11px;
    margin-bottom: 11px;
  }
}

