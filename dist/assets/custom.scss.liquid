/* Variables */
$white: white;
$black: black;
$gray: #C7C7C7;
$gray-light: #E7E7E7;
$gray-lighter: #F7F7F7;
$gray-dark: #808080;

$primary-accent1: #DC4B28;
$primary-accent2: #193859;
$secondary-accent: #AAC9E7;
$secondary-accent2: #1D778D;
$secondary-accent3: #FFEDB7;
$error: #AC3A38;
@font-face {
  font-family: 'NewsGothicMT';
  src: url(' {{ 'NewsGothicMT.ttf' | asset_url }} ') format('truetype');
  font-weight: 400;
  font-style: normal;
}

@font-face {
  font-family: 'NewsGothicMT';
  src: url(' {{ 'NewsGothicMTBold.ttf' | asset_url }} ') format('truetype');
  font-weight: 700;
  font-style: normal;
}

@font-face {
  font-family: 'NewsGothicMT';
  src: url(' {{ 'NewsGothicMTItalic.ttf' | asset_url }} ') format('truetype');
  font-weight: 400;
  font-style: italic;
}

@font-face {
  font-family: 'MillerHeadline', serif;
  src: url(' {{ 'Miller Headline Light.otf' | asset_url }} ') format('opentype');
  font-weight: 300;
  font-style: normal;
}
//Mixins
@mixin placeholder {
  &.placeholder { @content; }
  &:-moz-placeholder { @content; }
  &::-moz-placeholder { @content; }
  &::-webkit-input-placeholder { @content; }
}

@mixin minQuery($resolution){
  @media screen and (min-width: $resolution){
    @content;
  }
}

@mixin maxQuery($resolution){
  @media screen and (max-width: $resolution){
    @content;
  }
}

@mixin minmaxQuery($min, $max){
  @media screen and (min-width: $min) and (max-width: $max){
    @content;
  }
}

@mixin flex() {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
}

@mixin inline-flex(){
  display: inline-flex;
  display: -webkit-inline-box;
  display: -ms-inline-flexbox;
}
@mixin align-items($position){
  -webkit-box-align: $position;
  -ms-flex-align: $position;
  align-items: $position;
}
@mixin justify-content($position){
  -webkit-box-pack: $position;
  -ms-flex-pack: $position;
  justify-content: $position;
}
@mixin flex-center(){
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
}
@mixin inline-flex-center(){
  display: -webkit-inline-box;
  display: -ms-inline-flexbox;
  display: inline-flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
}
@mixin prefix($property, $value) { 
  $prefixes: ("-webkit-","-moz-", "-o-", "-ms-", "");
  @each $prefix in $prefixes {
      #{$prefix}#{$property}: #{$value};
  }
}
//Font Mixins
@mixin newsB($font-size){
  font-family: 'NewsGothicMT';
  font-size: $font-size;
  font-weight: 700;
}
@mixin newsI($font-size){
  font-family: 'NewsGothicMT';
  font-size: $font-size;
  font-style: italic;
  font-weight: 400;
}
@mixin newsR($font-size){
  font-family: 'NewsGothicMT';
  font-size: $font-size;
  font-weight: 400;
}
@mixin miller($font-size){
  font-family: 'MillerHeadline';
  font-size: $font-size;
  font-weight: 300;
  font-style: normal;
}

/* Global */
html{
  font-size: 62.5%;
}
body{
  background: white;
  line-height: 2.4rem;
  color: $primary-accent2;
  @include newsR(1.2rem);
}

h1,.h1{
  font-size: 2.4rem;
  line-height: 3.6rem;
}
h2,.h2{
  font-size: 2rem;
  line-height: 3rem;
}
h3,.h3{
  font-size: 1.8rem;
  line-height: 2.7rem;
}
h4,.h4{
  font-size: 1.5rem;
  line-height: 2.3rem;
}
h5,.h5{
  font-size: 1.2rem;
  line-height: 1.8rem;
}
h6,.h6{
  font-size: 1rem;
  line-height: 1.7rem;
}
a,.a{
  text-decoration: underline;
  color: $primary-accent2;
  transition: color .3s;
  display: inline-block;
  &:hover{
    color: $gray;
    text-decoration: none;
  }
}

//Buttons
button,
.Btn{
  border: 2px solid $primary-accent1;
  color: $primary-accent1;
  background-color: transparent;
  text-transform: uppercase;
  transition: color .3s, background-color .3s;
  line-height: 1;
  &:hover{
    color: $white;
    background-color: $primary-accent1;
    cursor: pointer;
  }
}
.Btn--primary{
  border-color: $primary-accent1;
  color: $primary-accent1;
  background-color: $white;
  &:hover{
    color: $white;
    background-color: $primary-accent1;
  }
}
.Btn--secondary{
  border-color: $primary-accent2;
  color: $primary-accent2;
  background-color: $white;
  &:hover{
    color: $white;
    background-color: $primary-accent2;
  }
}
.Btn--tertiary{
  border-color: $white;
  color: $white;
  background-color: transparent;
  &:hover{
    color: transparent;
    background-color: $white;
  }
}
.Btn--small{
  height: 35px;
  padding-left: 25px;
  padding-right: 25px;
}
.Btn--big{
  height: 45px;
  padding-left: 35px;
  padding-right: 35px;
}

//Form
form {
  max-width: 100%;
}

//Input
input[type="text"],
input[type="email"],
input[type="tel"],
input[type="search"],
input[type="url"],
select{
  height: 45px;
  border: 1px solid $gray;
  padding-left: 15px;
  &:invalid{
    border: 2px solid $error;
  }
  &:focus{
    border: 2px solid $primary-accent2;
  }
}


.InputWrap{
  position: relative;
  label{
    position: absolute;
    left: 15px;
    top: 50%;
    @include prefix(transform, translateY(-50%));
    transition: top .3s;
    color: $gray;
  }
  input,
  select{
    padding-top: 20px;
  }
}
.InputWrap.active label,
input:focus + label{
  top: 9px;
  color: $gray-dark;
  transform: none;
}



/* Sections */
.Promobar{
  height: 40px;
  width: 100%;
  text-align: center;
  @include flex-center();
  .Promobar__text-content{
    @include newsR(1.4rem);
  }
  a{
    color: inherit;
    text-decoration: none;
  }
}
.Header{
  padding-top: 40px;
  position: relative;
  z-index: 20;
}

/* Homepage */
.Hero{
  margin-top: -75px;
  z-index: 1;
  position: relative;
}
.Hero__image{
  img{ 
    width: 100%; 
    vertical-align: middle;
  }
}

.Hero__main{
  @include miller(3.6rem);
  margin-bottom: 10px;
  line-height: 1.25;
  text-transform: uppercase;
}
