  text-transform: uppercase;
  text-align: center;
  margin-bottom: 25px;
}
.Media__logos{
  @include flex();
  flex-wrap: wrap;
  width: 870px;
  max-width: 100%;
  margin-left: auto;
  margin-right: auto;
}
.Media__logo{
  @include flex();
  @include align-items(center);
  @include justify-content(center);
  width: 100%;
  @include prefix(filter, grayscale(1));
  opacity: .5;
  transition: opacity .3s;
  margin-bottom: 30px;
  img{max-height: 65px;}
  @include minQuery($s){
    width: 50%;
