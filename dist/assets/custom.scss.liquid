//Mixins
@mixin placeholder {
  &.placeholder { @content; }
  &:-moz-placeholder { @content; }
  &::-moz-placeholder { @content; }
  &::-webkit-input-placeholder { @content; }
}

@mixin minQuery($resolution){
  @media screen and (min-width: $resolution){
    @content;
  }
}

@mixin maxQuery($resolution){
  @media screen and (max-width: $resolution){
    @content;
  }
}

@mixin minmaxQuery($min, $max){
  @media screen and (min-width: $min) and (max-width: $max){
    @content;
  }
}

@mixin flex() {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
}

@mixin inline-flex(){
  display: inline-flex;
  display: -webkit-inline-box;
  display: -ms-inline-flexbox;
}
@mixin align-items($position){
  -webkit-box-align: $position;
  -ms-flex-align: $position;
  align-items: $position;
}
@mixin justify-content($position){
  -webkit-box-pack: $position;
  -ms-flex-pack: $position;
  justify-content: $position;
}
@mixin flex-center(){
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
}
@mixin inline-flex-center(){
  display: -webkit-inline-box;
  display: -ms-inline-flexbox;
  display: inline-flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
}
@mixin prefix($property, $value) { 
  $prefixes: ("-webkit-","-moz-", "-o-", "-ms-", "");
  @each $prefix in $prefixes {
      #{$prefix}#{$property}: #{$value};
  }
}
//Font Mixins
@mixin newsB($font-size){
  font-family: 'NewsGothicMT';
  font-size: $font-size;
  font-weight: 700;
}
@mixin newsI($font-size){
  font-family: 'NewsGothicMT';
  font-size: $font-size;
  font-style: italic;
  font-weight: 400;
}
@mixin newsR($font-size){
  font-family: 'NewsGothicMT';
  font-size: $font-size;
  font-weight: 400;
}
@mixin miller($font-size){
  font-family: 'MillerHeadline';
  font-size: $font-size;
  font-weight: 300;
  font-style: normal;
}

@mixin lineHeading(){
  font-family: 'NewsGothicMT';
  font-weight: 400;
  text-transform: uppercase;
  &:after{
    display: block;
    content:'';
    position: relative;
    height: 2px;
    background-color: $primary-accent1;
  }
}
@mixin lineHeading-center($width){
  @include lineHeading();
  text-align: center;
  &:after{
    width: $width;
    margin-left: auto;
    margin-right: auto;
  }
}

@mixin lineHeading-left($width){
  @include lineHeading();
  &:after{
    width: $width;
  }
  @include maxQuery($s){
    text-align: center;
    &:after{
      margin-left: auto;
      margin-right: auto;
    }
  }
}

/* Global */
html{
  font-size: 62.5%;
}
body{
  background: white;
  line-height: 2.4rem;
  color: $primary-accent2;
  @include newsR(1.2rem);
}
body.fixed{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  overflow: hidden;
}

h1,.h1{
  font-size: 2.4rem;
  line-height: 3.6rem;
  font-family: 'Miller';
}
h2,.h2{
  font-size: 2rem;
  line-height: 3rem;
  font-family: 'Miller';
}
h3,.h3{
  font-size: 1.8rem;
  line-height: 2.7rem;
  font-family: 'Miller';
}
h4,.h4{
  font-size: 1.5rem;
  line-height: 2.3rem;
}
h5,.h5{
  font-size: 1.2rem;
  line-height: 1.8rem;
}
h6,.h6{
  font-size: 1rem;
  line-height: 1.7rem;
}

a,.a{
  text-decoration: underline;
  color: $primary-accent2;
  transition: color .3s;
  display: inline-block;
  &:hover{
    color: $gray;
    text-decoration: none;
  }
}
.Link--accent{
  color: $primary-accent1;
  text-transform: uppercase;
  font-weight: bold;
  &:hover{
    color: $primary-accent1;
    text-decoration: none;
  }
}
.Link--partial-accent{
  position: relative;
  text-decoration: none !important;
  font-family: 'Miller';
  color: $white;
  &:after{
    content:'';
    display: inline-block;
    position: absolute;
    left: 0;
    bottom: -15px;
    height: 2px;
    background-color: $primary-accent1;
    width: 50%;
    transition: width .3s;
  }
}
//Buttons
a.Btn{
  @include inline-flex-center();
  text-decoration: none;
}
button,
.Btn{
  border: 2px solid $primary-accent1;
  color: $primary-accent1;
  background-color: transparent;
  text-transform: uppercase;
  transition: color .3s, background-color .3s;
  @include flex-center();
  &:hover{
    color: $white;
    background-color: $primary-accent1;
    cursor: pointer;
  }
}
.Btn--primary{
  border-color: $primary-accent1;
  color: $primary-accent1;
  background-color: $white;
  &:hover{
    color: $white;
    background-color: $primary-accent1;
  }
}
.Btn--secondary{
  border-color: $primary-accent2;
  color: $primary-accent2;
  background-color: $white;
  &:hover{
    color: $white;
    background-color: $primary-accent2;
  }
}
.Btn--tertiary{
  border-color: $white;
  color: $white;
  background-color: transparent;
  &:hover{
    color: $gray-dark;
    background-color: $white;
  }
}
.Btn--small{
  height: 35px;
  padding-left: 25px;
  padding-right: 25px;
}
.Btn--big{
  height: 45px;
  padding-left: 35px;
  padding-right: 35px;
}

//Form
form {
  max-width: 100%;
}

//Input
input[type="text"],
input[type="email"],
input[type="tel"],
input[type="search"],
input[type="url"],
select{
  height: 45px;
  border: 1px solid $gray;
  padding-left: 15px;
  &:invalid{
    border: 2px solid $error;
  }
  &:focus{
    border: 2px solid $primary-accent2;
  }
}


.InputWrap{
  position: relative;
  label{
    position: absolute;
    left: 15px;
    top: 50%;
    @include prefix(transform, translateY(-50%));
    transition: top .3s;
    color: $gray;
  }
  input,
  select{
    padding-top: 20px;
  }
}
.InputWrap.active label,
input:focus + label{
  top: 9px;
  color: $gray-dark;
  transform: none;
}

/* Slick */
.slick-dots{
  @include flex();
  .slick-active button{
    background-color: $primary-accent2;
    border-color: $primary-accent2;
  }
  button{
    height: 5px;
    width: 5px;
    border-radius: 5px;
    background-color: $gray;
    border-color: $gray;
    font-size: 0;
    margin-left: 2.5px;
    margin-right: 2.5px;
  }
}

/* Sections */
.Promobar{
  height: 40px;
  width: 100%;
  text-align: center;
  @include flex-center();
  .Promobar__text-content{
    @include newsR(1.4rem);
  }
  a{
    color: inherit;
    text-decoration: none;
  }
}
.Header{
  padding-top: 40px;
  padding-bottom: 40px;
  position: absolute;
  left: 0;
  width: 100%;
  z-index: 20;
}
.Header__content{
  position: relative;
  z-index: 2;
}
.Header__logo{
  position: relative;
}
.Header__logo-image{
  vertical-align: middle;
}
.Header__logo-image--dark{
  position: absolute;
  left: 0;
  top: 50%;
  opacity: 0;
  @include prefix(transform, translateY(-50%));
}
.Header.active,
.Header--is-dark{
  background: $white;
  .Header__logo-image--light{
    opacity: 0;
  }
  .Header__logo-image--dark{
    opacity: 1;
  }
  .Nav__link{
    color: $primary-accent2;
  }
}

@include maxQuery($s){
  .Header__column--logo{
    order: 2;
  }
  .Header__column--nav{
    order: 1;
  }
  .Header__column--user{
    order: 3;
  }
}

.Header--is-dark{
  position: static;
}

@include minQuery($s){
  .Nav__link{
    color: $white;
    text-transform: uppercase;
    text-decoration: none;
    font-size: 1.4rem;
  }
  .Nav__menu--one{
    @include flex();
    @include justify-content(space-between);
  }
  .Nav__link--one{
    position: relative;
    &:after{
      content:'';
      position: absolute;
      display: block;
      left: 0;
      bottom: 0;
      height: 1px;
      width: 0;
      background-color: $primary-accent1;
      transition: width .3s;
    }
    &:hover{
      color: $primary-accent1 !important;
      &:after{
        width: 80%;
      }
    }
  }
  .Nav__dropdown-container{
    &:hover{
      .Nav__link--one{
        color: $primary-accent1;
        &:after{
          width: 80%;
        }
      }
      .Nav__menu--two{
        opacity: 1;
        @include flex();
      }
    }
  }
  .Nav__dropdown-menu{
    transition: opacity .3s;
  }
  .Nav__menu-container{
    margin-left: auto;
    margin-right: auto;
    @include flex();
  }
  .Nav__menu-container--two{
    width: 1100px;
    max-width: 100%;
    @include justify-content(space-between);
  }
  .Nav__menu-container--three{
    width: 850px;
    max-width: 100%;
    @include justify-content(space-around);
  }
  .Nav__menu--two{
    padding-top: 100px;
    position: absolute;
    left: 0;
    width: 100%;
    background-color: $white;
    opacity: 0;
    display: none;
  }
  .Nav__menu--two__link{
    flex: 1;
    text-align: center;
    padding-bottom: 60px;
    img{
      @include prefix(filter, grayscale(1));
      opacity: .4;
      transition: opacity .3s;
      max-height: 95px;
      max-width: 95%;
    }
    &:hover{
      .Nav__link--two{
        color: $primary-accent1;
      }
      img{
        opacity: 1;
        @include prefix(filter, grayscale(0));
      }
      .Nav__menu--three{
        opacity: 1;
      }
    }
  }
  .Nav__menu--three{
    position: absolute;
    left: 0;
    right: 0;
    bottom: -70px;
    height: 70px;
    line-height: 70px;
    background-color: $gray-lighter;
    opacity: 0;
  }
  .Nav__link--three{
    &:hover{
      color: $primary-accent1 !important;
    }
  }
}

@include maxQuery($s){
  .Header{
    display: none !important;
  }
  .Header{
    padding-top: 0;
  }
  .Nav__hamburger{
    height: 16px;
    width: 30px;
    @include flex-center();
    position: relative;
    &:hover{
      cursor: pointer;
    }
  }
  .NavHam__line{
    height: 2px;
    width: 30px;
    background-color: $white;
    display: block;
  }
  .NavHam__line--1{
    transition: opacity .3s;
    position: relative;
  }
  .NavHam__line--2{
    transition: transform 0.3s ease, top 0.3s 0.3s ease;
    position: absolute;
    top: 0;
  }
  .NavHam__line--3{
    transition: transform 0.3s ease, bottom 0.3s 0.3s ease;
    position: absolute;
    left: 0;
    bottom: 0;
  }
  .Nav{
    position: fixed;
    top: 80px;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: white;
    padding: 10px;
    text-align: center;
    overflow-y: scroll;
    padding-bottom: 110px;
  }
  .Nav__link{
    text-transform: uppercase;
    color: $primary-accent2;
    text-decoration: none;
  }
  .Nav__dropdown-container{
    .Nav__link--one{
      &:after{
        font-family: 'Material Icons';
        font-style: normal;
        content:'\e5cf';
        position: absolute;
        right: -15px;
      }
    }
  }
  .Nav__dropdown-container.active .Nav__link--one{
    color: $primary-accent1;
    &:after{
      content:'\e5cd';
    }
    &:before{
      opacity: 1;
    }
  }
  .Nav__link--one{
    text-decoration: none;
    position: relative;
    &:before{
      content:'';
      height: 2px;
      width: 80%;
      position: absolute;
      bottom: 0;
      background-color: $primary-accent1;
      left: 50%;
      @include prefix(transform, translateX(-50%));
      opacity: 0;
    }
  }
  .Nav__menu-container--two{
    @include flex();
    @include align-items(center);
    flex-wrap: wrap;
  }
  .Nav__menu--two__link{
    width: 50%;
    padding-left: 10px;
    padding-right: 10px;
  }
  .Nav__menu-container--three{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: $gray-lighter;
    @include flex();
    @include align-items(center);
    flex-wrap: wrap;
    height: 110px;
    >li{
      width: 50%;
    }
  }
}

.Header.active{
  .NavHam__line{
    background-color: $primary-accent2;
  }
  .NavHam__line--1{
    opacity: 0;
  }
  .NavHam__line--2{
    top: 50%;
    transition: transform 0.3s 0.3s ease, top 0.3s ease;
    @include prefix(transform, translateY(-50%) rotate(-45deg));
  }
  .NavHam__line--3{
    bottom: 38%;
    transition: transform 0.3s 0.3s ease, bottom 0.3s ease;
    @include prefix(transform, translateY(-50%) rotate(45deg));
  }
}
