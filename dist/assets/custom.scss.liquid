/* Variables */
/* Variables =================================================================*/

// Colors
$colorBrand: {{ settings.color_brand }};
$colorText: {{ settings.color_text }};
$colorForeground: {{ settings.color_foreground }};
$colorBackground: {{ settings.color_background }};
$colorHighlight: {{ settings.color_highlight }};
$colorAlternate: {{ settings.color_alternate }};
$colorBorder: $colorAlternate;
$adjustAmount: 25%;

// Space & Borders
$columns: 12;
$spacing: 10px;
$gutter: $spacing*2;
$borderRadius: 2px;
$borderWeight: 2px;
$borderStyle: solid;

// Typography
$fontLight: 300;
$fontNormal: 400;
$fontBold: 700;
$fontFamily: sans-serif;
$lineHeight: 1.5;
$lineMargin: $spacing*2;

// Font bases
$h1: 2.5rem;
$h2: 2rem;
$h3: 1.75rem;
$h4: 1.25rem;
$h5: 1rem;
$h6: 0.75rem;
$p: 1rem;
$small: 0.625rem;

// Screen Sizes
$s: 600px;
$m: 945px;
$l: 1140px;
$xl: 1170px;

// Transitions
$transitionProperty: all;
$transitionSpeed: 250ms;
$transitionStyle: ease-out;
$transitionDelay: 300ms;
$transition: $transitionProperty $transitionSpeed $transitionStyle;

// Misc.
$logoWidth: {{ settings.logo_width | default: '450' | append: 'px' }};
$prefixes: webkit moz ms spec;

$white: white;
$black: black;
$gray: #C7C7C7;
$gray-light: #E7E7E7;
$gray-lighter: #F7F7F7;
$gray-dark: #808080;

$primary-accent1: #DC4B28;
$primary-accent2: #193859;
$secondary-accent: #AAC9E7;
$secondary-accent2: #1D778D;
$secondary-accent3: #FFEDB7;
$error: #AC3A38;
@font-face {
  font-family: 'NewsGothicMT';
  src: url(' {{ 'NewsGothicMT.ttf' | asset_url }} ') format('truetype');
  font-weight: 400;
  font-style: normal;
}

@font-face {
  font-family: 'NewsGothicMT';
  src: url(' {{ 'NewsGothicMTBold.ttf' | asset_url }} ') format('truetype');
  font-weight: 700;
  font-style: normal;
}

@font-face {
  font-family: 'NewsGothicMT';
  src: url(' {{ 'NewsGothicMTItalic.ttf' | asset_url }} ') format('truetype');
  font-weight: 400;
  font-style: italic;
}

@font-face {
  font-family: 'MillerHeadline', serif;
  src: url(' {{ 'Miller Headline Light.otf' | asset_url }} ') format('opentype');
  font-weight: 300;
  font-style: normal;
}
//Mixins
@mixin placeholder {
  &.placeholder { @content; }
  &:-moz-placeholder { @content; }
  &::-moz-placeholder { @content; }
  &::-webkit-input-placeholder { @content; }
}

@mixin minQuery($resolution){
  @media screen and (min-width: $resolution){
    @content;
  }
}

@mixin maxQuery($resolution){
  @media screen and (max-width: $resolution){
    @content;
  }
}

@mixin minmaxQuery($min, $max){
  @media screen and (min-width: $min) and (max-width: $max){
    @content;
  }
}

@mixin flex() {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
}

@mixin inline-flex(){
  display: inline-flex;
  display: -webkit-inline-box;
  display: -ms-inline-flexbox;
}
@mixin align-items($position){
  -webkit-box-align: $position;
  -ms-flex-align: $position;
  align-items: $position;
}
@mixin justify-content($position){
  -webkit-box-pack: $position;
  -ms-flex-pack: $position;
  justify-content: $position;
}
@mixin flex-center(){
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
}
@mixin inline-flex-center(){
  display: -webkit-inline-box;
  display: -ms-inline-flexbox;
  display: inline-flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
}
@mixin prefix($property, $value) { 
  $prefixes: ("-webkit-","-moz-", "-o-", "-ms-", "");
  @each $prefix in $prefixes {
      #{$prefix}#{$property}: #{$value};
  }
}
//Font Mixins
@mixin newsB($font-size){
  font-family: 'NewsGothicMT';
  font-size: $font-size;
  font-weight: 700;
}
@mixin newsI($font-size){
  font-family: 'NewsGothicMT';
  font-size: $font-size;
  font-style: italic;
  font-weight: 400;
}
@mixin newsR($font-size){
  font-family: 'NewsGothicMT';
  font-size: $font-size;
  font-weight: 400;
}
@mixin miller($font-size){
  font-family: 'MillerHeadline';
  font-size: $font-size;
  font-weight: 300;
  font-style: normal;
}

/* Global */
html{
  font-size: 62.5%;
}
body{
  background: white;
  line-height: 2.4rem;
  color: $primary-accent2;
  @include newsR(1.2rem);
}

h1,.h1{
  font-size: 2.4rem;
  line-height: 3.6rem;
  font-family: 'Miller';
}
h2,.h2{
  font-size: 2rem;
  line-height: 3rem;
  font-family: 'Miller';
}
h3,.h3{
  font-size: 1.8rem;
  line-height: 2.7rem;
  font-family: 'Miller';
}
h4,.h4{
  font-size: 1.5rem;
  line-height: 2.3rem;
}
h5,.h5{
  font-size: 1.2rem;
  line-height: 1.8rem;
}
h6,.h6{
  font-size: 1rem;
  line-height: 1.7rem;
}
a,.a{
  text-decoration: underline;
  color: $primary-accent2;
  transition: color .3s;
  display: inline-block;
  &:hover{
    color: $gray;
    text-decoration: none;
  }
}
.Link--accent{
  color: $primary-accent1;
  text-transform: uppercase;
  font-weight: bold;
  &:hover{
    color: $primary-accent1;
    text-decoration: none;
  }
}
.Link--partial-accent{
  position: relative;
  text-decoration: none !important;
  font-family: 'Miller';
  color: $white;
  &:after{
    content:'';
    display: inline-block;
    position: absolute;
    left: 0;
    bottom: -15px;
    height: 2px;
    background-color: $primary-accent1;
    width: 50%;
    transition: width .3s;
  }
}
//Buttons
a.Btn{
  @include inline-flex-center();
  text-decoration: none;
}
button,
.Btn{
  border: 2px solid $primary-accent1;
  color: $primary-accent1;
  background-color: transparent;
  text-transform: uppercase;
  transition: color .3s, background-color .3s;
  @include flex-center();
  &:hover{
    color: $white;
    background-color: $primary-accent1;
    cursor: pointer;
  }
}
.Btn--primary{
  border-color: $primary-accent1;
  color: $primary-accent1;
  background-color: $white;
  &:hover{
    color: $white;
    background-color: $primary-accent1;
  }
}
.Btn--secondary{
  border-color: $primary-accent2;
  color: $primary-accent2;
  background-color: $white;
  &:hover{
    color: $white;
    background-color: $primary-accent2;
  }
}
.Btn--tertiary{
  border-color: $white;
  color: $white;
  background-color: transparent;
  &:hover{
    color: $gray-dark;
    background-color: $white;
  }
}
.Btn--small{
  height: 35px;
  padding-left: 25px;
  padding-right: 25px;
}
.Btn--big{
  height: 45px;
  padding-left: 35px;
  padding-right: 35px;
}

//Form
form {
  max-width: 100%;
}

//Input
input[type="text"],
input[type="email"],
input[type="tel"],
input[type="search"],
input[type="url"],
select{
  height: 45px;
  border: 1px solid $gray;
  padding-left: 15px;
  &:invalid{
    border: 2px solid $error;
  }
  &:focus{
    border: 2px solid $primary-accent2;
  }
}


.InputWrap{
  position: relative;
  label{
    position: absolute;
    left: 15px;
    top: 50%;
    @include prefix(transform, translateY(-50%));
    transition: top .3s;
    color: $gray;
  }
  input,
  select{
    padding-top: 20px;
  }
}
.InputWrap.active label,
input:focus + label{
  top: 9px;
  color: $gray-dark;
  transform: none;
}



/* Sections */
.Promobar{
  height: 40px;
  width: 100%;
  text-align: center;
  @include flex-center();
  .Promobar__text-content{
    @include newsR(1.4rem);
  }
  a{
    color: inherit;
    text-decoration: none;
  }
}
.Header{
  padding-top: 40px;
  padding-bottom: 40px;
  position: absolute;
  left: 0;
  width: 100%;
  z-index: 20;
}
.Header__content{
  position: relative;
  z-index: 2;
}
.Header__logo{
  position: relative;
}
.Header__logo-image{
  vertical-align: middle;
}
.Header__logo-image--dark{
  position: absolute;
  left: 0;
  top: 50%;
  opacity: 0;
  @include prefix(transform, translateY(-50%));
}
.Header.active{
  background: $white;
  .Header__logo-image--light{
    opacity: 0;
  }
  .Header__logo-image--dark{
    opacity: 1;
  }
  .Nav__link{
    color: $primary-accent2;
  }
}
.Nav__link{
  color: $white;
  text-transform: uppercase;
  text-decoration: none;
  font-size: 1.4rem;
}
.Nav__menu--one{
  @include flex();
  @include justify-content(space-between);
}
.Nav__link--one{
  position: relative;
  &:after{
    content:'';
    position: absolute;
    display: block;
    left: 0;
    bottom: 0;
    height: 1px;
    width: 0;
    background-color: $primary-accent1;
    transition: width .3s;
  }
  &:hover{
    color: $primary-accent1 !important;
    &:after{
      width: 80%;
    }
  }
}
.Nav__dropdown-container{
  &:hover{
    .Nav__link--one{
      color: $primary-accent1;
      &:after{
        width: 80%;
      }
    }
    .Nav__menu--two{
      opacity: 1;
      @include flex();
    }
  }
}
.Nav__dropdown-menu{
  transition: opacity .3s;
}
.Nav__menu-container{
  margin-left: auto;
  margin-right: auto;
  @include flex();
}
.Nav__menu-container--two{
  width: 1100px;
  max-width: 100%;
  @include justify-content(space-between);
}
.Nav__menu-container--three{
  width: 850px;
  max-width: 100%;
  @include justify-content(space-around);
}
.Nav__menu--two{
  padding-top: 100px;
  position: absolute;
  left: 0;
  width: 100%;
  background-color: $white;
  opacity: 0;
  display: none;
}
.Nav__menu--two__link{
  flex: 1;
  text-align: center;
  padding-bottom: 60px;
  img{
    @include prefix(filter, grayscale(1));
    opacity: .4;
    transition: opacity .3s;
    max-height: 95px;
    max-width: 95%;
  }
  &:hover{
    .Nav__link--two{
      color: $primary-accent1;
    }
    img{
      opacity: 1;
      @include prefix(filter, grayscale(0));
    }
    .Nav__menu--three{
      opacity: 1;
    }
  }
}
.Nav__menu--three{
  position: absolute;
  left: 0;
  right: 0;
  bottom: -70px;
  height: 70px;
  line-height: 70px;
  background-color: $gray-lighter;
  opacity: 0;
}
.Nav__link--three{
  &:hover{
    color: $primary-accent1 !important;
  }
}
.SocialBar{
  height: 75px;
  width:100%;
  background-color: $primary-accent2;
  text-align: right;
  @include flex();
  @include align-items(center);
  @include justify-content(center);
  ul{
    width: 300px;
    margin-left: auto;
    margin-right: auto;
    @include flex();
    @include justify-content(space-between);
    @include minQuery($m){
      margin-right: initial;
    }
  }
}

.Social__icon{
  vertical-align: middle;
}
.Footer__nav-row{
  flex-wrap: wrap;
  @include maxQuery($s){
    .column:first-child{
      order: 2;
    }
    .column:nth-child(2){
      order: 3;
    }
    .column:last-child{
      order: 1;
    }
  }
}
.Footer__nav{
  text-transform: uppercase;
}
.Footer__nav__heading{
  font-weight: bold;
  margin-bottom: 10px;
  @include minQuery($s){
    margin-bottom: 20px;
  }
}
.Footer__nav__link{
  text-decoration: none;
  line-height: 2.5;
  @include maxQuery($s){
    line-height: 2;
    color: $gray-dark;
  }
}

.Footer__form{
  position: relative;
  display: inline-block;
  input[type="email"]{
    border-right: none;
    border-left: none;
    border-top: none;
    padding-left: 10px;
    transition: border none;
    width: 263px;
    font-style: italic;
    color: $gray-dark;
  }
  button[type="submit"]{
    position: absolute;
    top: 0;
    right: 0;
    border: none;
    height: 100%;
    width: 30px;
    text-align: right;
    &:hover{
      background: transparent;
      svg path{
        stroke: black;
      }
    }
  }
}

.Footer__copyright-row{
  @include maxQuery($s){
    .column:first-child{
      order: 2;
    }
    .column:nth-child(2){
      order: 3;
    }
    .column:last-child{
      order: 1;
    }
  }
}
.Footer__copyright{
  font-size: 1rem;
  color: $gray-dark;
}

/* Homepage */
.Hero{
  z-index: 1;
  position: relative;
}
.Hero__image{
  img{ 
    width: 100%; 
    vertical-align: middle;
  }
}
.Hero__text-container{
  position: absolute;
  left: 50%;
  top: 50%;
  @include prefix(transform, translate(-50%,-50%));
  z-index: 2;
  text-align: center;
  width: 100%;
}
.Hero__main{
  @include miller(2.4rem);
  margin-bottom: 10px;
  line-height: 1.25;
  text-transform: uppercase;
  margin-bottom: 40px;
  @include minQuery($s){
    font-size: 3.6rem;
    margin-bottom: 70px;
  }
}

.Hero__button{
  font-size: 1.6rem;
  max-width: 100%;
  margin-bottom: 30px;
  min-width: 200px;
  padding-left: 20px;
  padding-right: 20px;
  @include minQuery($s){
    min-width: 170px;
    margin-left: 15px;
    margin-right: 15px;
  }
}

.Info{
  width: 1040px;
  @include minQuery($s){
    .row--reversed{
      flex-flow: row-reverse;
    }
  }
}

.Info__row--normal{
  .Info__content{
    text-align: right;
  }
}

.Info__text-container{
  width: 360px;
  max-width: 100%;
  display: inline-block;
  text-align: left;
}
.Info__heading{
  margin-bottom: 25px;
  @include minQuery($s){
    font-size: 3.6rem;
  }
}
.Info__body{
  margin-bottom: 25px;
}
.Info__link{
  font-size: 1.8rem;
  @include minQuery($s){
    font-size: 1.2rem;
  }
}
.CollectionGrid{
  @include flex();
  flex-wrap: wrap;
  width: $l;
  max-width: 100%;
  margin-left: auto;
  margin-right: auto;
}
.CollectionGrid__collection{
  width: 100%;
  position: relative;
  a{
    text-decoration: none;
  }
  .Link--partial-accent{
    position: absolute;
    bottom: 30px;
    left: 15px;
    z-index: 2;
    font-size: 1.8rem;
  }
  &:hover{
    .Link--partial-accent{
      &:after{
        width: 100%;
      }
    }
  }

  @include minQuery($s){
    width: 50%;
    .Link--partial-accent{
      bottom: 64px;
      left: 40px;
      font-size: 2.6rem;
    }
  }
}
.CollectionGrid__collection:last-child{
  width: 100%;
}
.CollectionGrid__image{
  vertical-align: middle;
}
.Quote{
  span{
    display: block;
  }
  @include minQuery($s){
    span{display: inline-block;}
  }
}
.Quote__image{
  max-width: 100%;
  width: 50px;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 10px;
  @include minQuery($s){
    width: 65px;
  }
}
.Quote__quote{
  position: relative;
  @include miller(1.8rem);
  line-height: 28px;
  &:after{
    content:'';
    display: block;
    position: relative;
    width: 80px;
    height: 2px;
    background-color: $primary-accent1;
    margin-left: auto;
    margin-right: auto;
    margin-top: 15px;
    margin-bottom: 15px;
  }
  @include minQuery($s){
    @include miller(2.6rem);
    line-height: 38px;
  }
}
.Quote__source{
  color: $gray;
  line-height: 1;
  @include newsB(1.2rem);
  @include minQuery($s){
    @include newsB(1.8rem);
  }
}
.Media__heading{
  @include newsR(1.4rem);
  text-transform: uppercase;
  text-align: center;
  margin-bottom: 25px;
}
.Media__logos{
  @include flex();
  flex-wrap: wrap;
  width: 870px;
  max-width: 100%;
  margin-left: auto;
  margin-right: auto;
}
.Media__logo{
  @include flex();
  @include align-items(center);
  @include justify-content(center);
  width: 100%;
  @include prefix(filter, grayscale(1));
  opacity: .5;
  transition: opacity .3s;
  margin-bottom: 30px;
  img{max-height: 65px;}
  @include minQuery($s){
    width: 50%;
  }
  @include minQuery(850px){
    width: 33.33%;
  }
  &:hover{
    @include prefix(filter, grayscale(0));
    opacity: 1;
  }
}

/* Nested Collection */
.NestedCollection__banner{
  position: relative;
}
.NestedCollection__heading{
  position: absolute;
  top: 50%;
  left: 50%;
  @include prefix(transform, translate(-50%,-50%));
  color: white;
  @include miller(2.4rem);
  @include minQuery($s){
    font-size: 4.8rem;
  }
}

.NestedCollection__collection__heading-container{
  position: relative;
  text-align: center;
}
.NestedCollection__collection__image{
  @include prefix(filter, grayscale(1));
  opacity: .1;
  width: 200px;
  max-width: 100%;
}
.NestedCollection__collection__title{
  color: $primary-accent2;
  display: inline-block;
  position: absolute;
  left: 0;
  bottom: 0;
  text-transform: uppercase;
  @include newsR(2.4rem);
  &:after{
    bottom: -10px;
  }
}
.NestedCollection__collection__body{
  margin-top: 30px;
  text-align: left;
}

.grid{
  display: grid;
  grid-row-gap: 20px;
  grid-column-gap: 10px;
  grid-template-columns: 1fr 1fr 1fr;
  @include maxQuery($s){
    grid-template-columns: 1fr 1fr;
  }
}
.cell{
  text-align: center;
}
.cell-tall{
  @include maxQuery($s){
    grid-column: 1 / 3;
    grid-row: 1 / 1;
  }
}
.cell-image{
  grid-row: 2 / 4;
  @include maxQuery($s){
    grid-column: 1 / 3;
    grid-row: 4/ 4;
  }
  img{
    margin-top: 50px;
  }
}
.CollectionProduct{
  text-align: center;
  img{
    max-height: 173px;
  }
}
.NestedFilter{
  @include flex();
  input[type="checkbox"]{
    display: inline-block;
  }
}