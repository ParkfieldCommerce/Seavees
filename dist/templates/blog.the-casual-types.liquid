<!-- /templates/{{ template }}.liquid -->

{% assign column_width = 'column l12' %}

{% paginate blog.articles by 6 %}

  <div class="grid">
  {% for article in blog.articles %}
    {% include 'blog-article-casual' %}
  {% endfor %}
  </div>

{% endpaginate %}
<style>
  .grid{
    width: 1280px;
    margin-left: auto;
    margin-right: auto;
    max-width: 100%;
  }
  .blog-article{
    width: 330px;
  }
</style>
<script src="https://cdnjs.cloudflare.com/ajax/libs/masonry/4.2.2/masonry.pkgd.min.js"></script>
<script>
  $('.grid').masonry({
    // options
    itemSelector: '.blog-article',
    columnWidth: 300
  });
</script>