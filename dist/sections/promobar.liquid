<!-- sections/promobar.liquid -->
{% if section.settings.enable_promobar %}
<div class="Promobar">
  <p class="Promobar__text-content">
    {% if section.settings.url %}
      <a href="{{section.settings.url}}">
    {% endif %}
    {{section.settings.text}}
    {% if section.settings.url %}
      </a>
    {% endif %}
  </p>
</div>
<style>
  .Promobar{
    background: {{section.settings.bg_color}};
  }
  .Promobar p{
    color: {{section.settings.text_color}};
  }
</style>
{% endif %}
{% schema %}
  {
    "name": "Promobar",
    "settings": [
      {
        "type":"checkbox",
        "id":"enable_promobar",
        "label":"Enable Promobar",
        "default":true
      },
      {
        "type": "header",
        "content": "Text Content"
      },
      {
        "id":"text",
        "type":"textarea",
        "label":"Text"
      },
      {
        "id":"url",
        "type":"url",
        "label":"URL"
      },
      {
        "type":"header",
        "content":"Styling"
      },
      {
        "type":"color",
        "id":"bg_color",
        "label":"Background Color",
        "default":"#AAC9E7"
      },
      {
        "type":"color",
        "id":"text_color",
        "label":"Text Color",
        "default":"#FFF"
      }
    ]
  }
{% endschema %}
