<!-- /snippets/{{ section.id }}.liquid -->

{% assign show_subscribe = section.settings.show_subscribe %}
{% assign show_social = section.settings.show_social %}
{% assign form_heading = section.settings.form_heading %}
{% assign form_email_placeholder = section.settings.form_email_placeholder %}
{% assign form_button_text = section.settings.form_button_text %}
{% assign form_success = section.settings.form_success %}

{% include 'socialbar' %}
<footer class="Footer padding-bottom-4x" role="contentinfo">
  <div class="container l">
    <div class="Footer__nav-row flex row margin-bottom-5x s-margin-bottom-3x">
      <div class="column l2 m3 s12 left s-center s-margin-bottom-3x">
        {% if section.settings.footer_menu_1 %}
        {% assign footerMenu = linklists[section.settings.footer_menu_1] %}
        <nav class="Footer__nav">
          <h5 class="Footer__nav__heading">{{footerMenu.title}}</h5>
          <ul>
            {% for link in footerMenu.links %}
            <li>
              <a class="Footer__nav__link" href="{{link.url}}">{{link.title}}</a>
            </li>
            {% endfor %}
          </ul>
        </nav>
        {% endif %}
      </div>
      <div class="column l2 m3 s12 left s-center">
        {% if section.settings.footer_menu_2 %}
        {% assign footerMenu = linklists[section.settings.footer_menu_2] %}
        <nav class="Footer__nav">
          <h5 class="Footer__nav__heading">{{footerMenu.title}}</h5>
          <ul>
            {% for link in footerMenu.links %}
            <li>
              <a class="Footer__nav__link" href="{{link.url}}">{{link.title}}</a>
            </li>
            {% endfor %}
          </ul>
        </nav>
        {% endif %}
      </div>
      <div class="column l8 m6 s12 right s-center s-margin-bottom-3x">
        {% if show_subscribe %}
          <div class="Footer__form">
            {% include 'form-subscribe' %}
          </div>
        {% endif %}
      </div>
    </div>
    <div class="Footer__copyright-row flex v-end">
      <div class="column l4 m4 s12 left s-center s-margin-bottom-3x"><img src="{{'CA64.png' | asset_url}}" alt=""></div>
      <div class="column l4 m4 s12 center"><span class="Footer__copyright">&copy; {{ 'now' | date: "%Y" }} SEAVEES. ALL RIGHTS RESERVED.</span></div>
      <div class="column l4 m4 s12 right s-center s-margin-bottom-5x"><img src="{{'1Planet.png' | asset_url}}" alt=""></div>
    </div>
  </div>
</footer>
{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "header",
        "content": "Footer"
      },
      {
        "type": "checkbox",
        "id": "show_social",
        "label": "Show social media icons"
      },
      {
        "type":"link_list",
        "id":"footer_menu_1",
        "label":"Footer Menu 1"
      },
      {
        "type":"link_list",
        "id":"footer_menu_2",
        "label":"Footer Menu 2"
      },
      {
        "type": "header",
        "content": "Subscribe form"
      },
      {
        "type": "checkbox",
        "id": "show_subscribe",
        "label": "Show subscribe form"
      },
      {
        "type": "text",
        "id": "form_email_placeholder",
        "placeholder": "Email address",
        "label": "Email placeholder"
      },
      {
        "type": "textarea",
        "id": "form_success",
        "placeholder": "Thank you for subscribing!",
        "label": "Confirmation message"
      }
    ]
  }
{% endschema %}
